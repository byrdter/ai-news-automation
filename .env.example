# AI News Automation System - Environment Variables
# Copy this to .env and fill in your actual values

# ============================================================================
# DATABASE CONFIGURATION (Supabase)
# ============================================================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-role-key
DATABASE_URL=postgresql://user:password@db.your-project.supabase.co:5432/postgres

# ============================================================================
# AI MODEL CONFIGURATION
# ============================================================================
# OpenAI for Pydantic AI agents (Discovery, Report, Coordination)
OPENAI_API_KEY=sk-your-openai-api-key

# Cohere for content analysis (90% cheaper than GPT-4)
COHERE_API_KEY=your-cohere-api-key
COHERE_MODEL=command-r7b-12-2024

# ============================================================================
# EMAIL CONFIGURATION (SMTP)
# ============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=True
EMAIL_FROM=your-email@gmail.com
EMAIL_TO=recipient@example.com

# ============================================================================
# NEWS SOURCE CONFIGURATION
# ============================================================================
# RSS feed configurations (Tier 1, 2, 3 sources)
RSS_FETCH_INTERVAL=3600  # seconds (1 hour)
RSS_MAX_ARTICLES_PER_SOURCE=50
RSS_RATE_LIMIT_DELAY=1.0  # seconds between requests
RSS_MAX_CONCURRENT=5

# Content filtering
RELEVANCE_THRESHOLD=0.7
AI_KEYWORDS=AI,artificial intelligence,machine learning,LLM,neural networks,GPT,Claude,deep learning

# ============================================================================
# SYSTEM CONFIGURATION
# ============================================================================
# Environment: development, staging, production
ENVIRONMENT=development

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/ai_news_system.log

# Cost tracking and limits
MONTHLY_BUDGET_USD=100.0
DAILY_BUDGET_USD=3.33
COST_ALERT_THRESHOLD=0.8  # Alert at 80% of budget

# ============================================================================
# AGENT CONFIGURATION
# ============================================================================
# Model settings for each agent type
DISCOVERY_AGENT_MODEL=gpt-4o-mini
ANALYSIS_AGENT_MODEL=command-r7b-12-2024  # Cohere
REPORT_AGENT_MODEL=gpt-4o-mini
ALERT_AGENT_MODEL=gpt-4o-mini
COORDINATION_AGENT_MODEL=gpt-4o-mini

# Agent timeouts (seconds)
AGENT_TIMEOUT=300
MCP_TOOL_TIMEOUT=60
WORKFLOW_TIMEOUT=1800

# ============================================================================
# WORKFLOW CONFIGURATION
# ============================================================================
# Report generation schedules
DAILY_REPORT_TIME=06:00  # 6 AM UTC
WEEKLY_REPORT_DAY=sunday
MONTHLY_REPORT_DATE=5

# Alert settings
ALERT_URGENCY_THRESHOLD=0.8
ALERT_THROTTLE_MINUTES=30
MAX_ALERTS_PER_HOUR=5

# Processing settings
MAX_ARTICLES_PER_DAY=150
BATCH_SIZE=10
CACHE_TTL=3600  # 1 hour

# ============================================================================
# MONITORING & HEALTH CHECKS
# ============================================================================
HEALTH_CHECK_INTERVAL=300  # 5 minutes
METRICS_RETENTION_DAYS=30
PERFORMANCE_ALERT_THRESHOLD=5.0  # seconds

# ============================================================================
# MCP SERVER CONFIGURATION
# ============================================================================
MCP_RSS_SERVER_PORT=3001
MCP_CONTENT_SERVER_PORT=3002
MCP_EMAIL_SERVER_PORT=3003
MCP_DATABASE_SERVER_PORT=3004

# ============================================================================
# SECURITY SETTINGS
# ============================================================================
# API rate limiting
API_RATE_LIMIT_PER_MINUTE=60
API_BURST_LIMIT=10

# Content validation
MAX_CONTENT_LENGTH=50000  # characters
ALLOWED_DOMAINS=openai.com,google.com,mit.edu,stanford.edu,berkeley.edu

# ============================================================================
# DEVELOPMENT SETTINGS
# ============================================================================
# Only used in development environment
DEV_SKIP_AUTHENTICATION=False
DEV_MOCK_EXTERNAL_APIS=False
DEV_ENABLE_DEBUG_LOGGING=True

# Test data settings
TEST_RSS_FEEDS=3
TEST_ARTICLES_COUNT=5
TEST_EMAIL_RECIPIENT=test@example.com